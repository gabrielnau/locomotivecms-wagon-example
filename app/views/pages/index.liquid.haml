      // Baseline debug purpose
      window.onload = function() { baseliner = new Baseliner(24); }

  %body
    
    // Development only
    #grid-debug Toggle grid

    // Nav
    %header.site-head
      %a.site-head__logo{ href: "/" } I'm a cliché
      %a.site-head__toggle{ href: "#", class: "js-toggle", "data-target" => ".site-head__nav", "data-parent" => ".site-head" }
        MENU

      %nav.site-head__nav
        %ul
          %li
            %a{ href: "/" } HOME
          %li
            %a{ href: "/about" } ABOUT
          %li
            %a{ href: "/news" } NEWS
          %li
            %a{ href: "/artists" } ARTISTS
          %li
            %a{ href: "/releases" } RELEASES
          %li
            %a{ href: "/contact" } CONTACT

    {% block 'content' %}
    
    // Last five releases
    %section.section.l-container
      %header.section-header Latest releases
      
      {% for release in contents.releases %}
      %section.release-preview
        %a{ href: "", class: "release-preview_artwork" }
          %img{ src: "{{ release.artwork.url }}" }
        %header.release-preview__header
          %span {{ release.title }}
          %span Tour de chile ep
        .release-preview__meta
          %span CLICHÉ {{ release.number }}
          %time{ datetime: "2012-02-08" } 2012/02/08
          %ul.release-preview__meta__links
            %li
              %a{ href: "#", class: "js-toggle", "data-target" => ".release-preview__player", "data-parent" => ".release-preview" }
                Player
            {% if release.shop_url %}
            %li
              %a{ href: "{{ release.shop_url }}" } Shop
            {% endif %}
            %li
              %a{ href: "" } 
                Release page
        .release-preview__player
          {% include 'player' with type: 'soundcloud', url: 'http://w.soundcloud.com/player/?url=http%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F34934223&amp;auto_play=false&amp;show_artwork=false&amp;color=ff7700' %}
      {% endfor %}
      
        
       
       



    {% endblock %}
    
    %footer.site-footer © {{ today | localized_date: '%Y' }} - I'm A Cliché
  
  